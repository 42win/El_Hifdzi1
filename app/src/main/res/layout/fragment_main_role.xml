<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".ui.MainRoleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="152dp"
                android:layout_height="101dp"
                android:background="@drawable/logo1"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_below="@id/imageView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Portal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#67B232"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/cvSantri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img1"
                            android:layout_width="108dp"
                            android:layout_height="108dp"
                            app:civ_border_width="2dp"
                            android:background="@drawable/icon_santri"
                            app:civ_border_color="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/img1"
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"
                            android:text="Santri"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="30sp"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#67B232"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <RelativeLayout
                        android:id="@+id/cvGuru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/img2"
                            android:layout_width="108dp"
                            android:layout_height="108dp"
                            app:civ_border_width="2dp"
                            android:background="@drawable/icon_guru"
                            app:civ_border_color="@color/colorPrimaryDark"/>

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/img2"
                            android:layout_alignParentRight="true"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"
                            android:text="Ustadz"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="30sp"/>


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>